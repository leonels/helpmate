<h1 id="login">
  Sign in to<br />
  <strong style="font-size:18px;"><%= "#{Rails.application.class.parent_name}" %></strong>
</h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :username %><br />
    <%= text_field_tag :username, params[:username] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <!-- <div style="font-size:12px;color:#333;margin:0;text-align:center;">
		<% label_tag :remember_me, 'Remember me on this computer' %>
		<% check_box_tag :remember_me, 1, params[:remember_me] %>
  </div> -->
  <p class="button" style="text-align:center;"><%= submit_tag 'Sign in' %></p>
<% end %>
